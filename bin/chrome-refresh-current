#!/bin/sh

set -e

searchmode=classname
classname=chromium

#searchmode=class
#classname=Firefox

focused_window=$(xdotool getwindowfocus)
desktop=$(xdotool get_desktop)

xdotool search --desktop $desktop --onlyvisible --$searchmode $classname windowfocus &&\
    sleep 0.2 &&\
    xdotool key "ctrl+r"

xdotool windowfocus $focused_window
