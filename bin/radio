#!/usr/bin/env python

import sys
import subprocess

radios = {}
radios["7"] = "https://listen.radio7.lv:2053/Radio7"
radios["hu"] = "http://93.189.113.165:8000/stream"
radios["psy"] = "http://79.111.14.76:8002/psybient"
radios["tauta"] = "https://s3.radio.co/sd4ed5e478/listen"

play = None

if len(sys.argv) > 1:
    r = sys.argv[1]
    if r in radios:
        play = radios[r]

if play == None:
    for k in radios:
        print("{:6}{}".format(k, radios[k]))
else:
    subprocess.run(["mpv-singleton",
        '--term-status-msg="${time-pos}',
        '--no-term-osd-bar',
        radios[r]
    ])

