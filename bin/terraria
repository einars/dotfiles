#!/usr/bin/env zsh

notify '45 minutes of Terraria today done.'
exit -1

#notify --urgency=critical "Nē, pietiek, šis vairs nebūs spēļu dators."
cd /storage/izklaide/Terraria/game

notify '45 minutes of Terraria starting NOW.'

export TERM=xterm

{ sleep 42m && notify "Terraria terminating in 3 minutes" } &

trap 'killall sleep' EXIT

timeout 45m ./Terraria.bin.x86_64
