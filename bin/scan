#!/usr/bin/fish

function printf_filename
    set input $argv[1]
    set input (echo $input | sed s/%d/%02d/)
    set unfmt (printf $input 0)
    if [ $input = $unfmt ]
        echo $input
    else
        for i in (seq 100)
            set unfmt (printf $input $i)
            if test -e $unfmt
                true
            else
                echo $unfmt
                break
            end
        end
    end
end


set basename
set scan_params
set crop_params
set mode             Color
set resolution       300
set preview          yes
set format           png
set jpeg_q           85

# work around some race issues
# http://lists.alioth.debian.org/pipermail/sane-devel/2015-July/033606.html
# set -x SANE_DEBUG_GENESYS_LOW 7

if test -z $scan_viewer
    set scan_viewer viewnior
end

if test (count $argv) = 0
    echo scan [a5 good hq png grey] file_name
    exit -1
end

set paramidx 1
while test -n $argv[$paramidx]

    set a $argv[$paramidx]

    if [ $a = 'a5' ]
        set scan_params $scan_params -x 215 -y 153
        set crop_params $crop_params -rotate 90
    end
    if [ $a = 'a6' ]
        set scan_params $scan_params -x 107 -y 153
        set crop_params $crop_params -rotate 90
    end

    if [ $a = 'doc' ]
        set crop_params $crop_params -resize '1200x1200>'
        set format "jpg"
    end


    if [ $a = 'png' ]
        set format "png"
    end


    if [ $a = 'nopreview' ]
        set preview no
    end

    if [ $a = 'good' ]
        set format "png"
    end

    if [ $a = 'hq' ]
        set format "png"
        set resolution 600
    end

    if [ $a = 'color' ]
        set mode "Color"
    end

    if [ $a = 'grey' ]
        set mode "Gray"
    end
    if [ $a = 'gray' ]
        set mode "Gray"
    end

    set filename $a
    if [ $paramidx = (count $argv) ]
        break
    end
    set paramidx (math $paramidx + 1)
end

if test -z $filename
    echo Usage: $0 output.jpg
else
    set ext (echo $filename | sed -E 's/^.*[.]//')
    if [ $ext != "" -a $ext != $filename ]
       set format $ext
    end

    set basename (basename $filename .$format)
    set jpgname (printf_filename "$basename.$format")
    set tiffname (basename $jpgname .$format).tiff
    echo $jpgname


    # --buffer-size=1M
    sleep 2s
    scanimage \
        --resolution $resolution \
        --mode $mode \
        --format=tiff \
        $scan_params \
        > $tiffname

    if [ $format = 'png' ]
        gm convert \
            $crop_params \
            $tiffname $jpgname

        rm $tiffname
    else

        gm convert \
            -quality $jpeg_q \
            $crop_params \
            $tiffname $jpgname

        rm $tiffname
    end
    if [ $preview = "yes" ]
        eval $scan_viewer $jpgname &
    end

  echo
end

