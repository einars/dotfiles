#!/usr/bin/env php
<?php

date_default_timezone_set('Europe/Riga');

if (file_exists('/tmp/desktop-lock')) die;

$h = date('g');
$hs = (int)($h / 5);
$ls = $h % 5;

// echo "$h $hs $ls\n";
for($i = 0; $i < $hs; $i++) {
  beep_freq(2093);
}
for($i = 0; $i < $ls; $i++) {
  beep_freq(2794);
}

function beep_freq($freq) {
  system("AUDIODRIVER=alsa play --no-show-progress -n synth 0.08 sin $freq vol 0.3 > /dev/null");
  usleep(50000);
}
