#!/bin/sh

set -e

sudo true

year=$(date +%Y)
month=$(date +%m)

drazapath="/storage/draza/$year/$month"

mkdir -p $drazapath/sync

cd /storage/draza
rm -f current
ln -sf /storage/draza/$year/$month current

echo Created $drazapath
echo Restarting smbd service...
sudo systemctl restart smbd
echo Service restared


