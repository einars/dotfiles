#!/bin/sh

echo "$@" >> /home/e/.skype-notify
sender=$1
shift
notify $(printf "%s\n%s" $sender $(echo $@ | sed 's/<[^<>]*>//g'))


### #!/usr/bin/env fish
### 
### echo "$argv" >> /home/e/.skype-notify
### 
### set sender $argv[1]
### #set sender_username $argv[2]
### set message $argv
### set -e message[1]
### 
### 
### notify (printf "%s\n%s" $sender (echo $message | sed 's/<[^<>]*>//g'))
