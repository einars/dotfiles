#!/usr/bin/env fish

set sender $argv[1]
#set sender_username $argv[2]
set message $argv
set -e message[1]


if test -n $message
  printf "%s\n" "$argv" >> /home/e/.skype-notify

  #notify (printf "%s\n%s" $sender (printf "%s" $message | sed 's/<[^<>]*>//g'))
  notify-send -t 10000 -u normal -h int:x:1810 -h int:y:0 "$message"
end

