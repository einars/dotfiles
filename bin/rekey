#!/bin/sh



setxkbmap lv -option ctrl:nocaps  -option altwin:swap_lalt_lwin
echo '
keycode 94 = grave asciitilde grave asciitilde asciitilde
remove mod4 = Super_R

! altgr-p □  altgr-shift-p = ■
!
! vim-style-arrows
! altgr-5 ←  altgr-shift-5 = ◀
! altgr-6 ↓  altgr-shift-6 = ▼
! altgr-7 ↑  altgr-shift-7 = ▲
! altgr-8 →  altgr-shift-8 = ▶

!keycode 14 = 5 percent     5 percent     U2190 U25C0 U2190 U25C0
!keycode 15 = 6 asciicircum 6 asciicircum U2193 U25BC U2193 U25BC
!keycode 16 = 7 ampersand   7 ampersand   U2191 U25B2 U2191 U25B2
!keycode 17 = 8 asterisk    8 asterisk    U2192 U25B6 U2192 U25B6
keycode 14 = 5 percent     5 percent     U2190 U25C2 U2190 U25C2
keycode 15 = 6 asciicircum 6 asciicircum U2193 U25BE U2193 U25BE
keycode 16 = 7 ampersand   7 ampersand   U2191 U25B4 U2191 U25B4
keycode 17 = 8 asterisk    8 asterisk    U2192 U25B8 U2192 U25B8

keycode 33 = p P U25A1 U25A0 U25A1 U25A0

! altgr-[ ▸  altgr-sift-[ = ▸
! altgr-] □  altgr-sift-] = ■
keycode 34 = bracketleft braceleft bracketleft braceleft U25B8 U25B8 U25B8 U25B8
keycode 35 = bracketright braceright bracketright braceright U25A1 U25A0 U25A1 U25A0

keycode 134 = ISO_Level3_Shift

' | xmodmap -
