#!/bin/sh

pid=$(pidof -sx urxvtq -o %PPID)
if [ -z "$pid" ]; then
    urxvt -name urxvtq -geometry 199x40 -e /bin/zsh
else
  if [ -z "$(xdotool search --onlyvisible --classname urxvtq 2>/dev/null)" ]; then
    xdotool search --sync --classname urxvtq windowmap windowactivate
  else
    xdotool search --sync --classname urxvtq windowunmap
  fi
fi
