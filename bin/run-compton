#!/bin/sh

killall /usr/bin/compton
compton -b -C -G -c -f \
    --shadow-red 0.42 --shadow-green 0.48 --shadow-blue 0.55 \
    -o 0.7 --fade-out-step 0.05 --fade-in-step 0.05 -D 3 -e 0.9 \
    --vsync opengl-swc --paint-on-overlay --backend glx --shadow-exclude "! name~=''" \
    --use-ewmh-active-win --glx-no-stencil

# -o NNN shadow opacity
# -I NNN opacity step, fade in, def 0.028
# -O NNN opacity step, fade out, def 0.03
# -D MMM ms between step, def 10
# -e NNN title/border opacity, def disabled


# -c client-side shadows

# -C no shadows on dock/panel
# -G no shadows on dnd windows
# -f daemonize
# -z zero shadowmask behind the window (for semi?)
# -b daemonize
# -f fade windows in/out when opening/closing
